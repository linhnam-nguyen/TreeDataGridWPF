<UserControl x:Class="TreeDataGridWPF.Controls.TreeDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TreeDataGridWPF.Controls"
             xmlns:conv="clr-namespace:TreeDataGridWPF.Converters">
    <UserControl.Resources>
        <conv:DepthToIndentConverter x:Key="DepthToIndentConverter"/>
        <conv:ChildrenToVisibilityConverter x:Key="ChildrenToVisibilityConverter"/>
    </UserControl.Resources>

    <DataGrid x:Name="PART_DataGrid"
              ItemsSource="{Binding FlatRows, RelativeSource={RelativeSource AncestorType={x:Type local:TreeDataGrid}}}"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="False"
              HeadersVisibility="All"
              RowHeaderWidth="0"
              GridLinesVisibility="None"/>
</UserControl>